<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/holo_blue_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chess.MainActivity" >

    <Button
        android:id="@+id/main_replay"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/main_play"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:text="Replay" />

    <Button
        android:id="@+id/main_play"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_replay"
        android:layout_alignStart="@+id/main_replay"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="168dp"
        android:text="Play" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="230dp"
        android:layout_above="@+id/main_replay"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bkn" />

</RelativeLayout>
